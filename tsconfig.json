{
    "compilerOptions": {
        "outDir": "build",
        "declaration": true,
        "emitDeclarationOnly": false,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "rootDir": "src"
    },
    "include": [
        "src/**/*"
    ]
}